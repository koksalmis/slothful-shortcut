{
  "name": "slothful search",
  "description": "Type 'sr' plus a search term into the Omnibox to open search in new tab.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "omnibox": { "keyword" : "sr" },
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "sloth_16.png",
      "32": "sloth_32.png"
      }
  },
  "icons": {
    "16": "sloth_16.png",
    "32": "sloth_32.png",
    "64": "sloth_64.png",
    "128": "sloth_128.png"
  }
}
